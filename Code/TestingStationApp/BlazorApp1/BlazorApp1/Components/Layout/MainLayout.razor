@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">

<div id="connectivityDiv" >
    <span id="statusCircle" style="height: 15px; width: 15px; background-color: grey; border-radius: 50%; display: inline-block;"></span>
    <strong> Checking Connection...</strong>
</div

<script>
    function updateConnectionStatus() {
        fetch('/api/checkconnection')
            .then(response => response.json())
            .then(isConnected => {
                const statusCircle = document.getElementById('statusCircle');
                const statusText = document.getElementById('connectivityDiv').querySelector('strong');
                if (isConnected) {
                    statusCircle.style.backgroundColor = 'green'; // Set circle color to green if connected
                    statusText.textContent = 'Connected'; // Update text
                } else {
                    statusCircle.style.backgroundColor = 'red'; // Set circle color to red if not connected
                    statusText.textContent = 'Not Connected'; // Update text
                }
            })
            .catch(error => console.error('Error:', error));
    }
    // Call the function immediately when the page loads
    updateConnectionStatus();
    setInterval(updateConnectionStatus, 2000);  // Calls the function every 2 seconds
</script>




